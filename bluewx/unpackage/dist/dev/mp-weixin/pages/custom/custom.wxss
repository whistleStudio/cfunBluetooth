.btn-group {
  margin-top: 50rpx;
  width: 100%;
  height: 500rpx;
  font-family: "微软雅黑", "Micosoft Yahei", "Micosoft YaHei", "sans-serif";
}
.btn-group > ul {
  margin: 0 auto;
  width: 95%;
  padding: 20rpx;
  height: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #fafafa;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.btn-group > ul > li {
  width: 45%;
  height: 200rpx;
}
.btn-group > ul > li .btn-edit {
  width: 100%;
  line-height: 70rpx;
  font-size: 30rpx;
}
.btn-group > ul > li .btn-edit .edit-icon {
  float: right;
  font-size: 40rpx;
  margin-right: 10rpx;
  color: #f0c471;
}
.btn-group > ul > li > button {
  width: 100%;
  line-height: 80rpx;
  background-color: #4dc7f1;
  color: white;
  font-size: 40rpx;
}
.btn-group > ul > li .btn-hover {
  box-shadow: 1px 1px 1px 1px gray inset;
  background-color: #49bee5;
}
.slider-group {
  margin-top: 50rpx;
  width: 100%;
  height: 400rpx;
}
.slider-group > ul {
  margin: 0 auto;
  width: 95%;
  height: 100%;
  background-color: #fafafa;
  padding: 20rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.slider-group > ul > li {
  height: 160rpx;
  margin-bottom: 30rpx;
}
.slider-group > ul > li .slider-edit {
  line-height: 70rpx;
}
.slider-group > ul > li .slider-edit .slider-edit-icon {
  margin-left: 30rpx;
  font-size: 40rpx;
  color: #f0c471;
}
.slider-group > ul > li .slider-edit text:last-of-type {
  float: right;
  margin-right: 10rpx;
}
.slider-group > ul > li .input-edit {
  width: 280rpx !important;
}
.input-edit {
  width: 100%;
  height: 70rpx;
}
.input-edit > input {
  width: 100%;
  height: 60rpx;
  border: 1px solid #969696;
  box-sizing: border-box;
  border-radius: 10rpx;
  text-indent: 15rpx;
}