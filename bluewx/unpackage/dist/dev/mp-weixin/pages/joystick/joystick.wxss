.joystick {
  background-color: #969696;
  box-sizing: border-box;
  padding: 50rpx;
  position: relative;
}
.joystick .axis {
  width: 160px;
  height: 160px;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
}
.joystick .axis .axis-center {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: orange;
}
.joystick .arrow {
  position: absolute;
  width: 38px;
  height: 104px;
  background: url("data:image/png;base64,") center/contain no-repeat;
  left: 89%;
  top: 50%;
  transform: translateY(-50%);
}